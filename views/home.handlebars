<body class="back">
		{{#if res}}
		<script>alert("Success! Book added.");</script>
		{{/if}}

		<div class="header">
			<!-- Useful unicode for later  &#8592; -->
			<!-- Menu Button -->
			<div id="mySidenav" class="sidenav">
				<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">   &times;
				</a>
				<hr>
				<!-- Each Book-->
				<a href="/add/{{userID}}"> Add Book &#10133;  </a>
				<hr>
				<a href="/help/{{userID}}">Help</a>
				<hr>
				<a onclick="logout();"> Log Out </a>
				<hr>
			</div>

			<button class="menu" onclick="openNav()">
				&#9776;
			</button>
			
			<!-- App name -->
			<h1> STUDUwU </h1>

			<!-- Button for spacing -->
			<button class="menu" disabled></button>
		</div>

		<div class="grid-container">
			{{#each books}}
				<div class="grid-item">
				<button onclick="clicked();"> 
						{{name}} 
				</button>
				<br>
					<p>
					Pages left in session: {{page_num}} pages
					<br>
					<br>
					Estimated Time Left: {{time_per_page}} minutes
					<br>
					<br>
					Break Time: {{rest_time}} minutes
					<br><br>
					Reminder Method: {{reminder}} 
					</p>
				</div>

			{{/each}}
		</div>

		<div class="start">
			{{#if enabled}}
			{{else}}
				<h1> 
					Hello New User! <br>
					<br>
					Welcome to Studuwu, an app that would help you read and go UwU!<br>
					<br>
					To get started, click on the "Add Book" button below!<br>
				</h1>
				<a href="/add/{{userID}}"> Add Book &#10133;  </a>
			{{/if}}
		</div>
		<script>
				function clicked() {
					window.location.pathname = "/reading/" + {{userID}} + "/" + {{bookID}};

				}
			</script>
			
		<div class="uwu">
			<footer>
				<a href="/home/{{userID}}" style="text-decoration:none;color:#f2f2f2 ">UwU</a>
			</footer>
		</div>
</html>