<html>
<head>
	<title>Edit Book</title>
	<!--<meta name="viewport" content="width=device-width, initial-scale=1.0">
	-->
	<!-- Link a CSS style sheet -->
	<link rel="stylesheet" href="/css/add.css">
	<link href='https://fonts.googleapis.com/css?family=Baloo Thambi' rel='stylesheet'>
	<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
	<script src="/js/sound.js"></script>
</head>
<body>

<!-- Header of the page-->
<div class="header">
	<!-- Useul unicode for later&#9776; &#8592; -->
	<!-- Back Button -->
	<button onclick="window.location.pathname='/home/{{userID}}'" class="back"> 
		&#10094;
	</button>
	<!-- App name -->
	<h1> STUDUwU </h1>

	<!-- Help Button -->
	<button onclick="window.location.pathname='/help/{{userID}}'" class="help">  ?  
	</button>

</div>

<!-- Subtitle-->
<div class="title">
	<h2> <b><u>Edit Book</u></b> </h2>
</div>

<!-- Settings-->
<form role="form" action="/add/{{userID}}/send/" method="post">

	<div class="settings">
		
		<b>Name of Book: </b> <br>
		<input type="text" name="book" required="true" placeholder=" Insert Title">
		<br>
		<br>

		<b>Page Goal for Session:</b> <br>
		<input type="number" name="pages" min="1" required="true" placeholder="Pages">
		<br>
		<br>

		<b>Estimated Reading Time:</b> <br>
		<input type="number" name="time" min="1" required="true" placeholder="Minutes">
		<br>
		<br>

		<b> Breaks per Session:</b><br>
		<input type="number" min="1" required="true" placeholder="Breaks">
		<br>
		<br>

		<b>Time for each Break:</b> <br>
		<input type="number" name="break" min="1" required="true" placeholder="Minutes">
		<br>
		<br>

		<b>Reminder Method?</b> <br>

		<audio id="alarm" src="/images/alarm.mp3" type="audio/mp3"></audio>
		<input type="radio" name="reminder" id="reminder" value="alarm" onclick="alarm.play()">
		Alarm<br>


		<audio id="ding" src="/images/ding.mp3" type="audio/mp3"></audio>
		<input type="radio" name="reminder" id="reminder" value="ding" onclick="ding.play()">
		Ding<br>

		<audio id="beep" src="/images/beep-07.mp3" type="audio/mp3"></audio>
		<input type="radio" name="reminder" id="reminder" value="beep" onclick="beep.play()">
		Beep<br>


		<audio id="boop" src="/images/boop.mp3" type="audio/mp3" ></audio>
		<input type="radio" name="reminder" id="reminder" value="boop" onclick="boop.play()"s>
		Boop<br>


		<input class="submitbutton" type="submit" value="Add!"></input>
		<br>
	</div>

</form>

<div class="uwu">
	<footer>
		<a href="/home/{{userID}}" style="text-decoration:none;color:black ">UwU</a>
	</footer>
</div>
</body>
</html>