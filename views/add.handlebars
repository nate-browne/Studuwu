<html>
<head>
	<title>Add a Book</title>
	<!--<meta name="viewport" content="width=device-width, initial-scale=1.0">
	-->
	<!-- Link a CSS style sheet -->
	<link rel="stylesheet" href="/css/add.css">
	<link href='https://fonts.googleapis.com/css?family=Baloo Thambi' rel='stylesheet'>
	<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
</head>
<body>

<!-- Header of the page-->
<div class="header">
	<!-- Useul unicode for later&#9776; &#8592; -->
	<!-- Back Button -->
	<button onclick="window.location.pathname='/home/{{userID}}'" class="back"> 
		&#10094;
	</button>
	<!-- App name -->
	<h1> STUDUwU </h1>

	<!-- Help Button -->
	<button onclick="window.location.pathname='/help/{{userID}}'" class="help">  ?  
	</button>

</div>

<!-- Subtitle-->
<div class="title">
	<h2> <b><u>Add a Book</u></b> </h2>
</div>

<!-- Settings-->
<form role="form" action="/add/{{userID}}/subs/" method="get">

	<div class="settings">
		
		<b>Name of Book: </b> <br>
		<input type="text" name="book" required="true" placeholder=" Insert Title">
		<br>

		<b>Image of Book: </b> <br>
		<input type="file" name="pic" accept="image/*" required="true">
		<br>

		<b>Pages Per Session:</b> <br>
		<input type="number" name="pages" min="1" required="true" placeholder="Pages">
		<br>

		<b>Reading Time:</b> <br>
		<input type="number" name="time" min="1" required="true" placeholder="Minutes">
		<br>

		<b>Break Time:</b> <br>
		<input type="number" name="break" min="10" required="true" placeholder="Minutes">
		<br>

		<b>Reminder Method?</b> <br>
		<input type="radio" name="reminder" id="reminder" value="Music">
		Music<br>
		<input type="radio" name="reminder" id="reminder" value="Voice">
		Voice<br>
		<input type="radio" name="reminder" id="reminder" value="Beep">
		Beep<br>
		<input type="radio" name="reminder" id="reminder" value="Boop">
		Boop<br>
		<br>

		<input class="submitbutton" type="submit" value="Add!"></input>
		<br>
	</div>

</form>

<div class="uwu">
	<footer>
		UwU
	</footer>
</div>
</body>
</html>